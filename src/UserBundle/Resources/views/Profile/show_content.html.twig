{% trans_default_domain 'FOSUserBundle' %}
<div class="panel panel-primary">
    <div class="panel-heading">
        Information utilisateur
    </div>

    <div class="panel-body">
        <div class="fos_user_user_show">


            <form class="form-horizontal">
                <div class="form-group">
                    <div class="col-sm-6">
                        <label  class="control-label">{{ 'profile.show.username'|trans }} :</label>
                        <input class="form-control" id="disabledInput" type="text" placeholder="{{ user.username }}" disabled>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-6">
                        <label  class="control-label">Nom :</label>
                        <input class="form-control" id="disabledInput" type="text" placeholder="{{ user.nom }}" disabled>
                    </div>


                </div>
                <div class="form-group">
                    <div class="col-sm-6">
                        <label  class="control-label">Téléphone :</label>
                        <input class="form-control" id="disabledInput" type="text" placeholder="{{ user.telephone }}" disabled>
                    </div>

                    <div class="col-sm-6">
                        <label  class="control-label">{{ 'profile.show.email'|trans }} :</label>
                        <input class="form-control" id="disabledInput" type="text" placeholder="{{ user.email }}" disabled>
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-sm-12">
                        <label  class="control-label">Description :</label>
                <textarea class="form-control text-left" id="disabledInput" type="text" disabled>
                    {{ user.description }}
                </textarea>
                    </div>
                </div>


            </form>


        </div>

    </div>

    <div class="panel-footer panel-primary">
        <a href="{{ path("fos_user_profile_edit") }}" class="btn btn-primary" >Modifier</a>
    </div>


</div>


