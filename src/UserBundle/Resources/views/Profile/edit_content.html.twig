{% trans_default_domain 'FOSUserBundle' %}

<div class="panel panel-primary">
    <div class="panel-heading">
        Modification des informations utilisateur
    </div>

    <div class="panel-body">
        {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit my-awesome-dropzone form-horizontal' } }) }}

        {{ form_errors(form) }}
        <fieldset >
            <div class='form-group'>
                <div class='col-md-6'>
                    {{ form_label(form.username, "Nom d'utilisateur", {'label_attr': {'class': 'control-label'}  }) }}
                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.username) }}
                </div>
            </div>

            <div class='form-group'>
                <div class='col-md-6'>
                    {{ form_label(form.nom, "Nom", {'label_attr': {'class': 'control-label'}  }) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>
                <div class='col-md-6'>
                    {{ form_label(form.prenom, "Prénom", {'label_attr': {'class': 'control-label'}  }) }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.prenom) }}
                </div>
            </div>

            <div class='form-group'>
                <div class='col-md-6'>
                    {{ form_label(form.tel, "Téléphone :", {'label_attr': {'class': 'control-label'}  }) }}
                    {{ form_widget(form.tel, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.tel) }}
                </div>
                <div class='col-md-6'>
                    {{ form_label(form.email, 'profile.show.email'|trans, {'label_attr': {'class': 'control-label'}  }) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.email) }}
                </div>
            </div>

            <div class='form-group'>
                <div class='col-md-12'>
                    {{ form_label(form.userDescription, "Description", {'label_attr': {'class': 'control-label'}  }) }}
                    {{ form_widget(form.userDescription, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.userDescription) }}
                </div>
            </div>

            <div class='form-group'>
                <div class='col-md-12'>
                    {{ form_label(form.file, "Photo de profile", {'label_attr': {'class': 'control-label'}  }) }}
                    {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.file) }}
                </div>
            </div>
            <div class='form-group'>
                <div class='col-md-6'>
                    {{ form_label(form.current_password, "Entrez votre mot de passe", {'label_attr': {'class': 'control-label'}  }) }}
                    {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.current_password) }}
                </div>
            </div>

        </fieldset>

        {{ form_widget(form.MettreAJour, {'attr': {'class': 'btn btn-primary'}}) }}

        {{ form_rest (form) }}

        <!--
    <div>
        <input type="submit" value="{{ 'profile.edit.submit'|trans }}" />
    </div>
    -->
        {{ form_end(form) }}
    </div>

</div>


