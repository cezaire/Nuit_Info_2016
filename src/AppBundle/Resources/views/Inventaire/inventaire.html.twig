{% extends 'AppBundle:Bases:base.html.twig' %}

{% block stylesheets %}

{% endblock %}

{% block title %}Profile{% endblock %}
{% block body %}
    <div class="container" style="color: black">
        <div class="row" >
            <div class="col-md-12" style="padding-top:10px ">
                <ol class="breadcrumb">
                    <li><a href="{{ path("homepage") }}"><i class="glyphicon glyphicon-home" ></i> Home</a></li>

                    <li class="active">Inventaire</li>
                </ol>
            </div>
            <div class="col-md-12">
                <p><a class="btn btn-primary " href="{{ path("inventaireCreate") }}" role="button"> <i class="glyphicon glyphicon-plus"></i>Nouvel inventaire</a></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">


                <div class="panel panel-default">

                    <div class="panel-heading">Liste des inventaires</div>

                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Titre</th>
                            <th>Date de cr√©ation</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for inventaire in inventaires %}
                            <tr>
                                <td>{{ inventaire.id }}</td>
                                <td>{{ inventaire.titre }}</td>
                                <td>{{ inventaire.dateCreation | date('j/m/Y - H:i')  }}</td>
                                <td>
                                    <a href="{{ path('inventaireDelele',{ 'id': inventaire.id }) }}" >
                                        <i class="glyphicon glyphicon-trash"></i>
                                    </a>
                                    <a href="{{ path('inventaireDetails',{ 'id': inventaire.id }) }}" >
                                        <i class="glyphicon glyphicon-eye-open"></i>
                                    </a>
                                    <a href="{{ path('inventaireEdit',{ 'id': inventaire.id }) }}">
                                        <i class="glyphicon glyphicon-pencil"></i>
                                    </a>
                                </td>
                            </tr>

                        {% endfor %}

                        </tbody>
                    </table>
                </div>

            </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
{% endblock %}
