                    {% else %}
                        <li><a href="{{ path('inventaire') }}" > Inventaires </a></li>
                    {% endif %}

                    {%  if(app.request.pathInfo == "/information/") %}
                        <li class="active"><a href="{{ path('information') }}" > Informations </a></li>
